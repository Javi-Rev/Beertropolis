<!DOCTYPE html>
<html lang="en">
  
    <h1 class="banner">All Beers</h1>
  
<div class="content">
  <div class="visible">
    <ul class="scrolly">
    <% @beers.each do |b| %>
      <%= link_to b.name, beer_path(b), :class => 'scrollyui' %>

    <% end %>
    </ul>
  </div>
</div>

<div class="list">
<% @beers.each do |b| %>
  <%= link_to b.name, beer_path(b) %>
  <br>
  | Style: <%= b.style %>
  | Manufacturer: <%= b.manufacturer %>
  <br>
  <br>
<% end %>
</div>
</html>
