<!DOCTYPE html>
<html>
  <head>
    <%= include_gon(:init => true) %>
    <title>Beertropolis</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= render 'favicon' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <ul class="header">
      <li class="name" style="align:center">
        <a href="/">Beertropolis</a>
      </li>
      <li>
        <% if logged_in? %>
          <%= link_to "Log Out", logout_path %>
        <% else %>
          <%= link_to "Log In", login_path %>
        <% end %>
      </li>
      <li><a href="/beers">Beers</a></li>
      <li><a href="/about">About Us</a></li>
    </ul>

    <%= yield %>

    <footer>
      <p>Copyright: Beertropolis 2016</p>
      <p><a href="mailto:swanm86@gmail.com">Contact Us!</a></p>
      <p>Created by: Javi, Matthew, Megan and Sean</p>
    </footer>
  </body>
</html>
