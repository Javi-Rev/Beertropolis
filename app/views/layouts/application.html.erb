<!DOCTYPE html>
<html>
<head>
  <title>Beertropolis</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if logged_in? %>
    <%= link_to "Log Out", logout_path %>
  <% else %>
    <%= link_to "Log In", login_path %>
  <% end %>

  <%= yield %>

</body>
</html>
